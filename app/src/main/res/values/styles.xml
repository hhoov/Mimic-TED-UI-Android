<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorTED</item>
        <item name="android:colorBackgroundFloating">@color/colorTED</item>
        <item name="android:textColor">@color/colorTED</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorTED</item>
    </style>

    <style name="AppBarLayout" >
        <item name="android:background">@color/colorLight</item>
        <item name="tabIndicatorColor">@color/colorTED</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="android:state_active">@color/colorTED</item>
    </style>
</resources>
